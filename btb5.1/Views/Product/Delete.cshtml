@model btb5._1.Models.Product

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm mt-5">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Confirm Delete</h4>
                </div>
                <div class="card-body text-center">
                    <h5 class="text-danger">Are you sure you want to delete this product?</h5>
                    <p class="fw-bold">@Model.Name</p>
                    <p>
                        <span class="text-muted">Buy Price:</span>
                        <span class="text-primary">@Model.BuyPrice.ToString("C")</span>
                    </p>
                    <p>
                        <span class="text-muted">Sell Price:</span>
                        <span class="text-success">@Model.SellPrice.ToString("C")</span>
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
